<Window x:Class="LauncherUI.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LauncherUI"
        mc:Ignorable="d"
        Title="Source Demo Render" Height="180" Width="640" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
		<StackPanel Orientation="Vertical" VerticalAlignment="Top">
			<TextBlock x:Name="StatusText" Text="Looking for SDR updates" HorizontalAlignment="Center" FontSize="15" Margin="5" TextWrapping="Wrap"/>
			<ProgressBar x:Name="Progress" Height="32" IsIndeterminate="True"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
			<Button x:Name="UpgradeButton" Margin="10,0,0,0" Height="32" Content="Upgrade" Width="100" FontSize="15" IsEnabled="False" Click="UpgradeButton_Click"/>
			<Button x:Name="StartButton" Margin="10,0,0,0" Height="32" Content="Start" Width="100" FontSize="15" IsEnabled="False" Click="StartButton_Click"/>
		</StackPanel>
	</Grid>
</Window>
